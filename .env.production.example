# Configuration de Production pour Ges-Comptes API
# Copiez ce fichier vers .env.production et ajustez les valeurs selon votre environnement

# ==========================================
# APPLICATION
# ==========================================
APP_NAME=Ges-Comptes
APP_ENV=production
APP_KEY=base64:5qUN3Hgr8wkMhIB9UIb1u4KCg4ZvR90oC56+VkRERFY=
APP_DEBUG=false
APP_URL=https://votre-domaine-production.com

DEBUGBAR_ENABLED=false

# Localisation et timezone
APP_TIMEZONE=UTC
APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

# ==========================================
# LOGGING
# ==========================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ==========================================
# BASE DE DONNÉES PRINCIPALE (PostgreSQL)
# ==========================================
# Utilisez DATABASE_URL pour une configuration simple
DB_CONNECTION=pgsql
DATABASE_URL=postgresql://username:password@host:port/database

# Ou configurez séparément :
DB_HOST=your-database-host
DB_PORT=5432
DB_DATABASE=your-database-name
DB_USERNAME=your-database-username
DB_PASSWORD=your-database-password

# ==========================================
# BASE DE DONNÉES D'ARCHIVAGE (PostgreSQL)
# ==========================================
# Base séparée pour l'archivage automatique des comptes
DATABASE_ARCHIVE_URL=postgresql://archive_username:archive_password@archive_host:archive_port/archive_database
DB_CONNECTION_ARCHIVE=pgsql_archive
DB_HOST_ARCHIVE=your-archive-host
DB_PORT_ARCHIVE=5432
DB_DATABASE_ARCHIVE=your-archive-database
DB_USERNAME_ARCHIVE=your-archive-username
DB_PASSWORD_ARCHIVE=your-archive-password

# ==========================================
# CACHE, SESSIONS & QUEUES
# ==========================================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ==========================================
# REDIS (Optionnel - pour cache avancé)
# ==========================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==========================================
# EMAIL (SMTP)
# ==========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=votre-email@gmail.com
MAIL_PASSWORD=votre-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=votre-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================
# AWS S3 (Optionnel - pour stockage fichiers)
# ==========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==========================================
# TWILIO (Pour SMS)
# ==========================================
TWILIO_SID=votre-twilio-sid
TWILIO_AUTH_TOKEN=votre-twilio-auth-token
TWILIO_NUMBER=+1234567890

# ==========================================
# PUSHER (Optionnel - pour websockets)
# ==========================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ==========================================
# VITE (Pour le frontend)
# ==========================================
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ==========================================
# SÉCURITÉ & CORS
# ==========================================
SANCTUM_STATEFUL_DOMAINS=votre-domaine-production.com,localhost,127.0.0.1
FRONTEND_URL=https://votre-frontend-domain.com

# ==========================================
# PERFORMANCE (PHP OPcache & JIT)
# ==========================================
OPCACHE_ENABLE=true
JIT_ENABLE=true